<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto/com.netdoers.zname"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_frame"
    android:orientation="vertical"
    tools:ignore="ResAuto" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.netdoers.zname.utils.SquareImageView
            android:id="@+id/grid_item_display_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            >

            <ImageView
                android:id="@+id/grid_item_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/btn_ic_call_selector" />

            <ImageView
                android:id="@+id/grid_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/zname_ic_message" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <com.netdoers.zname.utils.AutoScaleTextView
            android:id="@+id/grid_item_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:minTextSize="12sp" />

        <com.netdoers.zname.utils.AutoScaleTextView
            android:id="@+id/grid_item_zname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:minTextSize="10sp" />
    </LinearLayout>

</LinearLayout>