<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dip"
    android:layout_marginStart="8dip"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/grid_alert_display_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Vikalp Patel"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/background_action_bar_orange" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_weight="0.7" >

            <ImageView
                android:id="@+id/grid_alert_contact_image"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/grid_alert_content_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/grid_alert_call"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableLeft="@drawable/btn_ic_call_selected"
                android:padding="3dp"
                android:gravity="center"
                android:text="Call"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#000000" />

            <TextView
                android:id="@+id/grid_alert_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableLeft="@drawable/zname_ic_message"
                android:gravity="center"
                android:padding="3dp"
                android:text="Message"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/grid_alert_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_action_bar_orange"
        android:paddingBottom="8dip"
        android:paddingEnd="16dip"
        android:paddingStart="16dip"
        android:paddingTop="8dip"
        android:text="Cancel"
        android:textColor="#FFFFFF" />

</LinearLayout>