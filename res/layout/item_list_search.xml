<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto/com.netdoers.zname"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="5"
    tools:ignore="ResAuto" >

    <com.netdoers.zname.utils.SquareImageView
        android:id="@+id/list_item_search_display_picture"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/def_contact" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_item_search_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="bottom|center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="Zname"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_item_search_zname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|top"
            android:layout_weight="1"
            android:gravity="top|center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="Zname"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>